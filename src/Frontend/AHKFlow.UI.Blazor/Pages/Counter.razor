@page "/counter"

<PageTitle>Counter</PageTitle>

<MudText Typo="Typo.h4" GutterBottom="true">Counter</MudText>

<MudStack Spacing="2">
    <MudText Typo="Typo.body1">Current count: @currentCount</MudText>
    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="IncrementCount">Click me</MudButton>
</MudStack>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
